            <% relatedPackageData.forEach((value,index)=>{ %>
            <div class="swiper-slide p-2">
              <div class="bg-white rounded-4 overflow-hidden">
                <a href="/category/<%=value.packageLocation%>/<%=value.packageURL%>" class="link-body-emphasis text-decoration-none">
                  <div class="" style="position: relative;">
                    <img src="packages/<%=value.packageImg%>" class="img-fluid" alt="">
                    <div class="bg-white p-2 rounded-3" style="position: absolute; right: 10px; top: 10px;">
                      <small class="">
                        ₹
                        <%=value.packagePrice%>/-
                      </small>
                    </div>
                  </div>
                  <div class="p-2">
                    <div class="">
                      <div class="p-2 mb-3 border-bottom">
                        <div class="">
                          <div>
                            <small>
                              <i class="fa-solid fa-location-arrow greenTxt"></i>
                            </small> &nbsp;
                            <small>
                              <%=value.packageLocation%> Trips
                            </small>
                          </div>
                          <div>
                            <small>
                              <i class="fa-solid fa-clock-rotate-left greenTxt"></i>
                              &nbsp;
                              <small>
                                <%=value.packageDuration%>
                              </small>
                            </small>
                          </div>
                        </div>
                      </div>
                    </div>

                    <div class="px-1">
                      <p>
                        <small>
                          <%=value.packageTitle%>
                        </small>
                      </p>
                    </div>


                  </div>
                </a>
              </div>
            </div>
            <% }) %>
          </div>
        </section>

      </div>
    </div>
  </div>
</section>


